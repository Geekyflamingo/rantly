<div class="login-form">
  {{input type="text" placeholder="First Name" class= "text-field" value= fnameCopy}}
  {{input type="text" placeholder= "Last Name" class= "text-field" value= lnameCopy}}
  {{input type="email" placeholder= "Email" class= "text-field" value= emailCopy}}
  <div class="form-group">
    {{input type="password" placeholder= "Password" class= "text-field" value= passwordCopy}}
    {{input type= "password" placeholder= "Password Confirmation" value= passwordConfirm}}
  </div>
  <button class= "button button-primary button-lg button-block" {{action 'register'}}>
    Sign Up
  </button>
</div>
